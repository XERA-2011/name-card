@import "/template/login/index.wxss";

.container {
  width: 750rpx;
  background-color: #faf9f9;
}

.max-width {
  width: 750rpx;
  background-color: #fff;
}

.userinfo-avatar {
  width: 750rpx;
}

.profile-box {
  position: relative;
  width: 650rpx;
  background-color: #fff;
  bottom: 100rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 20rpx #eeeeee;
}

.action-buttons {
  width: 750rpx;
  display: flex;
  text-align: center;
}

.action-buttons .button {
  width: 250rpx;
  text-align: center;
}

.action-buttons .button .img {
  width: 180rpx;
  height: 180rpx;
  margin-left: 35rpx;
  display: block;
}

.action-buttons .button .txt {
  font-size: 24rpx;
  display: block;
}

.profile {
  text-align: left;
  padding: 20rpx;
  color: #555;
  display: flex;
  flex-direction: column;
}

.profile text {
  font-size: 24rpx;
}

.profile .name {
  font-size: 40rpx;
  font-weight: 700;
  text-align: center;
}

.profile .position {
  font-size: 24rpx;
  font-weight: 700;
  border-bottom: 1px solid #ffeec1;
}

.phone {
  text-align: left;
  padding: 20rpx;
  font-size: 14px;
}

.profile2 {
  text-align: left;
  padding: 20rpx;
  color: #555;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: flex-end;
}

.profile2 .name {
  font-size: 32rpx;
  width: 120rpx;
}

.profile2 .position {
  font-size: 28rpx;
  width: 400rpx;
}

.profile2 .action {
  color: #fed257;
  font-size: 24rpx;
  width: 120rpx;
  background-color: #009e57;
  border-radius: 10rpx;
}

.share {
  position: fixed;
  right: 0rpx;
  top: 600rpx;
}

.sharempj {
  position: fixed;
  left: 0rpx;
  top: 60rpx;
}

.share .shareimg {
  width: 110rpx;
  height: 110rpx;
}

.sharempj .shareimg {
  width: 90rpx;
  height: 60rpx;
}

.shareFloatDiv1 {
  position: fixed;
  width: 100%;
  height: 100%;
  background-color: #555;
  filter: Alpha(Opacity=60);
  opacity: 0.6;
}

.shareFloatDiv2 {
  position: fixed;
  width: 100%;
  height: 400rpx;
  background-color: #fff;
  bottom: 0rpx;
}

.shareFloatDiv2 .p1 {
  height: 260rpx;
  display: flex;
  flex-direction: row;
}

.shareFloatDiv2 .p1 .wx {
  font-size: 28rpx;
  width: 375rpx;
  text-align: center;
  padding-top: 50rpx;
}

.shareFloatDiv2 .p1 .wx .shareimg {
  width: 150rpx;
  height: 150rpx;
}

.shareFloatDiv2 .p2 {
  height: 20rpx;
  background-color: #eee;
}

.shareFloatDiv2 .p3 {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: #555;
  font-size: 28rpx;
}

.qrcode-box {
  width: 100%;
  text-align: center;
  margin-top: 100rpx;
  background-color: #fff;
  position: relative;
}

.qrcode-box::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 40rpx;
  background-image: linear-gradient(#faf9f9, #ffffff);
  z-index: 1;
}

.qrcode {
  width: 300rpx;
  height: 300rpx;
  margin-top: 50rpx;
}